<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_student_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/select_student"
    android:orientation="vertical">

    <TextView
        android:id="@+id/single_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:text="User Name"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/single_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:text="student id"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="16sp" />
</LinearLayout>